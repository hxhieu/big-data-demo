@model CreateAccountModel

<h2>Create new account</h2>
<div>
    <a asp-controller="Account" asp-action="Index" class="waves-effect waves-light btn" style="margin-right: 20px">Home</a>
</div>
<div class="row">
    <form asp-controller="Account" asp-action="Create" method="post" class="col s12">
        <div class="row red-text">
            <div asp-validation-summary="All"></div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Email" type="text" class="validate" />
                <label for="Email">Email*</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input asp-for="Password" type="password" class="validate">
                <label for="Password">Password*</label>
            </div>
        </div>
        <button type="submit" class="waves-effect waves-light btn">Create</button>
    </form>
</div>